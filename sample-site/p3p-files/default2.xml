<!--Test P3P policy for obtaining personal data submitted in a form (making purchases)-->
<POLICIES
	xmlns="http://www.w3.org/2002/01/P3Pv1"
	xmlns:p3p11="http://www.w3.org/2006/01/P3Pv11">
	<POLICY name="formP3P"  
	   discuri="http://www.catalog.example.com/Privacy/PrivacyPracticeShopping.html" 
   xml:lang="en">
		<!-- Contact information of site creating this policy-->
		<ENTITY>
			<EXTENSION>
				<p3p11:data-group>
					<p3p11:datatype>
						<p3p11:business>
							<p3p11:orgname>U of O</p3p11:orgname>
							<p3p11:contact-info>
								<p3p11:postal>
									<p3p11:street>75 Laurier Ave E</p3p11:street>
									<p3p11:city>Ottawa</p3p11:city>
									<p3p11:province>ON</p3p11:province>
									<p3p11:postalcode>K1N 6N5</p3p11:postalcode>
									<p3p11:country>Canada</p3p11:country>
								</p3p11:postal>
								<p3p11:online>
									<p3p11:email>test@uottawa.com</p3p11:email>
								</p3p11:online>
							</p3p11:contact-info>
						</p3p11:business>
					</p3p11:datatype>
				</p3p11:data-group>
			</EXTENSION>

		<DATA-GROUP>
			<DATA ref="#business.name">University of Ottawa</DATA>
			<DATA ref="#business.contact-info.postal.street">75 Laurier Ave E</DATA>
			<DATA ref="#business.contact-info.postal.city">Ottawa</DATA>
			<DATA ref="#business.contact-info.postal.stateprov">ON</DATA>
			<DATA ref="#business.contact-info.postal.postalcode">K1N 6N5</DATA>
			<DATA ref="#business.contact-info.postal.country">Canada</DATA>
			<DATA ref="#business.contact-info.online.email">test@uottawa.com</DATA>
		</DATA-GROUP>

		</ENTITY>
		
		<!-- Disclosure -->
		<ACCESS>
			<contact-and-other/>
		</ACCESS>

	<!-- Dispute - the entity offers or acknowledges the following ways for a user to resolve disputes about the entity's privacy practices or alleged protocol violations.-->
	<DISPUTES-GROUP>
      <DISPUTES resolution-type="independent" 
       service="http://www.PrivacySeal.example.org"
       short-description="PrivacySeal.example.org">
        <IMG src="http://www.PrivacySeal.example.org/Logo.gif" alt="PrivacySeal's logo"/>

	<!-- Remedies -->
        <REMEDIES><correct/></REMEDIES> <!-- We will correct any errors we make related to the commitments in our privacy policy -->
      </DISPUTES>
    </DISPUTES-GROUP>

	<!-- Statement for user data-->
		<STATEMENT>
			<!-- A short summary or explanation of the data practices described in the STATEMENT that can be shown to a human user. -->
			<CONSEQUENCE>
			We collect name and contact information for online purchases.
			</CONSEQUENCE>

			<!-- contains one or more purposes of data collection or uses of data. -->
			<PURPOSE>
				<current/> <!-- Completion and Support of Activity For Which Data Was Provided: 
				Information may be used by the service provider to complete the activity for which it was provided, 
				whether a one-time activity such as returning the results from a Web search, forwarding an email message, or placing an order; 
				or a recurring activity such as providing a subscription service, or allowing access to an online address book or electronic wallet. -->
			</PURPOSE>
			<RECIPIENT>
				<ours/> <!-- only ourselves and our agents -->
				<delivery/> <!-- delivery services following different practice-->
			</RECIPIENT>
			<RETENTION>
				<stated-purpose/> <!-- For the stated purpose: Information is retained to meet the stated purpose. 
				This requires information to be discarded at the earliest time possible. Sites MUST have a retention policy that establishes a destruction time table. 
				The retention policy MUST be included in or linked from the site's human-readable privacy policy.-->
			</RETENTION>

			<EXTENSION>
				<p3p11:data-group>
				<p3p11:datatype>
					<p3p11:user>
					<p3p11:name/>
					<p3p11:home-info>
						<p3p11:postal/>
						<p3p11:telecom>
						<p3p11:telephone/>
						</p3p11:telecom>
						<p3p11:online>
						<p3p11:email/>
						</p3p11:online>
					</p3p11:home-info>
					</p3p11:user>
					<p3p11:dynamic>
					<p3p11:miscdata>
						<p3p11:category>
						<p3p11:purchase/>
						</p3p11:category>
					</p3p11:miscdata>
					</p3p11:dynamic>
				</p3p11:datatype>
				</p3p11:data-group>
			</EXTENSION>

			<!-- at least one DATA-GROUP element that contains one or more datatype extension elements. datatype extension elements are used to describe the type of data that a site collects-->
			<DATA-GROUP>
			<DATA ref="#user.name"/>
				<DATA ref="#user.home-info.postal"/>
				<DATA ref="#user.home-info.telecom.telephone"/>
				<DATA ref="#user.home-info.online.email"/>
				<DATA ref="#dynamic.miscdata">

			<!-- Categories are elements inside data elements that provide hints to users and user agents as to the intended uses of the data. -->
				<CATEGORIES>
				<physical/> <!-- Information that allows an individual to be contacted or located in the physical world - such as telephone number or address.-->
				<online/> <!-- Information that allows an individual to be contacted or located on the Internet - such as email.-->
				<purchase/> <!-- Information actively generated by the purchase of a product or service, including information about the method of payment.-->
				</CATEGORIES>
			</DATA>
			</DATA-GROUP>
			</STATEMENT>
		</POLICY> <!-- end of policy-->
	</POLICIES>


